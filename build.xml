<?xml version="1.0" encoding="UTF-8"?>
<project name="adsdroid" default="plugin">
	<target name="plugin" depends="classes">
		<zip destfile="burp-aspxformauth.jar">
			<fileset dir="build">
				<include name="burp/BurpExtender.class"/>
			</fileset>
		</zip>
	</target>
	<target name="classes">
		<mkdir dir="build"/>
		<javac srcdir="src" destdir="build" includeantruntime="false">
			<classpath>
				<fileset dir="lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>
	<target name="clean">
		<delete dir="build"/>
		<delete file="burp-aspxformauth.jar"/>
	</target>
</project>
